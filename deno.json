{
    "fmt": {
        "exclude": ["**/*.md", "./npm/**/*"],
        "lineWidth": 100,
        "indentWidth": 4
    },

    "exclude": ["./std/assert/npm"],

    "compilerOptions": {
        "lib": [
            "deno.window"
        ]
    },

    "tasks": {
        "test": "deno test -A --unstable-ffi",
        "npm:copy": "deno run -A ./eng/npm-update-src.ts"
    },

    "workspace": [
        "./jsr/bearz/assert",
        "./jsr/bearz/runtime-info"
    ],
    "imports": {
        "@std/assert": "jsr:@std/assert@^1.0.3"
    }
}
